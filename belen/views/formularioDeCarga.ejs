<%- include("partials/head.ejs")%>

<body>
    <div class="container" id="bodyform">
    <h1>Crear producto</h1>
    <form action="/productos/crear" method="POST" enctype="multipart/form-data">
        <div>
            <label for="">nombre</label>
            <input type="text" name="nombre">
        </div>
        <div>
            <label for="">materiales</label>
            <input type="text" name="materiales">
        </div>
        <div>
            <label for="">color</label>
            <input type="text" name="color">
        </div>
        <div>
            <label for="">stock</label>
            <input type="value" name="stock">
        </div>
        <div>
            <label for="">descripcion</label>
            <input type="text" name="descripcion">
        </div>
        <div>
            <label for="">nedidas</label>
            <input type="value" name="medidas">
        </div>
        <div>
            <label for="">precio</label>
            <input type="value" name="precio">
        </div>
       <div>
            <label for="">Cargar imagen Producto</label>
            <input type="file" name="imagen">
          </div>
          
        <div>
            <label for="">seccion</label>
            <label for="">Categoria</label>
                <select name="categoria">
                    <% for (let i = 0; i < categoria.length; i++){%>
                        <option value="<%=categoria[i].id_categoria%>">
                           <%=categoria[i].nombre%>
                        </option>
                    <% } %>                   
                                  
                </select>
        </div> 
        <div>
            <button class= "boton" type ="submit" id="guardar">Guardar</button>
            </div>
            
    </form>
</div>
  </body>
</html>
